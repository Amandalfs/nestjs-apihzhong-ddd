generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RulesAuth {
  member
  adminCustomer
  adminSuport
  adminWallet
}

model AuthUser {
  id         String    @id
  email      String    @unique
  password   String
  rules      RulesAuth @default(member)
  customerOn Customer? @relation(fields: [customerId], references: [id])
  customerId String?   @unique
}

model Customer {
  id       String    @id
  username String
  cpf      String
  email    String
  active   Boolean   @default(false)
  AuthUser AuthUser?
}
