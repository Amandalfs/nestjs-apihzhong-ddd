// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RulesAuth {
  member
  adminCustomer
  adminSuport
  adminWallet
}

enum TypeAcount {
  poupanca
  corrente
  empresarial
}

model AuthUser {
  id         String    @id
  email      String    @unique
  password   String
  rules      RulesAuth @default(member)
  customerOn Customer? @relation(fields: [customerId], references: [id])
  customerId String?   @unique
}

model Customer {
  id       String    @id
  username String
  name     String
  cpf      String
  email    String
  active   Boolean   @default(false)
  AuthUser AuthUser?
  Wallet   Wallet[]
}

model Agency {
  id     String   @id
  name   String
  number String   @unique
  Wallet Wallet[]
}

model Wallet {
  id          String   @id
  customer_id String
  customer    Customer @relation(fields: [customer_id], references: [id])

  agency    String
  agency_id String
  agencyTo  Agency @relation(fields: [agency_id], references: [id])

  typeAccount TypeAcount
  balance     Float

  limitWithdraw Float

  LimitWithdrawByDaily   Float
  currentWithdrawByDaily Float
  dateWithdrawByDaily    DateTime

  limitSending Float

  LimitSendingByDaily   Float
  currentSendingByDaily Float
  dateSendingByDaily    DateTime

  keyCpf    String @unique
  keyEmail  String @unique
  keyRandom String @unique
}
